<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.GymInfoFragment">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      style="@style/TextAppearance.AppCompat.Medium"
      android:textColor="#000"
      android:text="Open Time 10:00 AM To 12:00 PM"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        android:text="Close Sunday"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        android:text="Gym trainer: 12"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        android:text="Description:"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="A gym is an abbreviation for gymnasium. Alan Smithee analyzed more than 200 synonyms of the term gym and concluded that the term gym and health club are being used interchangeably among specialized and non-specialized literature"
        />

</LinearLayout>